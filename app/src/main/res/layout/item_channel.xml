<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_channel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_channel_icon"
        android:layout_width="@dimen/channel_icon_width"
        android:layout_height="@dimen/channel_icon_width"
        android:layout_margin="@dimen/channel_icon_margin"/>

    <ImageView
        android:id="@+id/image_channel_regist"
        android:layout_width="@dimen/channel_icon_regist_width"
        android:layout_height="@dimen/channel_icon_regist_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/channel_icon_regist_margin"/>

    <TextView
        android:id="@+id/text_channel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/image_channel_regist"
        android:layout_toRightOf="@+id/image_channel_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/channel_name_text_color"
        android:textSize="@dimen/channel_name_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_divider_height"
        android:layout_below="@+id/image_channel_icon"
        android:layout_marginLeft="@dimen/channel_divider_margin"
        android:layout_marginRight="@dimen/channel_divider_margin"
        android:background="@color/setting_divider"/>

</RelativeLayout>