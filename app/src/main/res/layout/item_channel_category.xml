<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/channel_toolbar_color">

    <ImageView
        android:id="@+id/image_channel_category_icon"
        android:layout_width="@dimen/channel_icon_width"
        android:layout_height="@dimen/channel_icon_width"
        android:layout_marginBottom="@dimen/channel_category_icon_margin_top"
        android:layout_marginLeft="@dimen/channel_icon_margin"
        android:layout_marginTop="@dimen/channel_category_icon_margin_top"/>

    <TextView
        android:id="@+id/image_channel_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/channel_category_text_margin_left"
        android:layout_toRightOf="@+id/image_channel_category_icon"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/channel_name_text"/>

</RelativeLayout>